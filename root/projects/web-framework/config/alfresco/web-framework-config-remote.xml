<alfresco-config>

   <plug-ins>
      <element-readers>
         <element-reader element-name="remote" class="org.alfresco.web.config.RemoteConfigElementReader"/>
	  </element-readers>
   </plug-ins>

	<config evaluator="string-compare" condition="Remote">

		<remote>
			
			<!-- Endpoints -->
			<!-- override the alfresco endpoint (defined in webscript-framework-config.xml)
			     to use the 'alfresco' connector which supplies Ticket based auth -->
			<endpoint>
				<id>alfresco</id>
				<name>Alfresco User</name>
				<description>User account access to Alfresco</description>
				<connector-id>alfresco</connector-id>
				<endpoint-url>http://localhost:8080/alfresco/service</endpoint-url>
				<identity>user</identity>
			</endpoint>
			
			<!-- The default endpoint -->
			<default-endpoint-id>alfresco</default-endpoint-id>
		   
		</remote>
				
	</config>

</alfresco-config>