<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
   
   <!-- Page Renderer Servlet configuration -->
   <bean id="pagerenderer.configsource" class="org.alfresco.config.source.UrlConfigSource">
      <constructor-arg>
         <list>
            <value>classpath:alfresco/webscript-framework-config.xml</value>
            <!-- NOTE: TEMP! -->
            <value>classpath:alfresco/webscript-framework-config-test.xml</value>
            <value>classpath:alfresco/extension/webscript-framework-config-custom.xml</value>
            <value>jar:*!/META-INF/webscript-framework-config-custom.xml</value>
            <value>classpath:alfresco/pagerenderer-config.xml</value>
            <value>classpath:alfresco/extension/pagerenderer-config-custom.xml</value>
            <value>jar:*!/META-INF/pagerenderer-config-custom.xml</value>
         </list>
      </constructor-arg>
   </bean>
   
   <bean id="pagerenderer.config" class="org.alfresco.config.xml.XMLConfigService" init-method="init">
      <constructor-arg>
         <ref bean="pagerenderer.configsource" />
      </constructor-arg>
   </bean>
   
   
   <!-- Page Renderer WebScript container -->
   <bean id="pagerenderer.container" parent="webscripts.abstractcontainer" class="org.alfresco.web.page.PageRendererRuntimeContainer">
      <property name="name"><value>PageRenderer</value></property>
      <property name="registry" ref="pagerenderer.registry" />
      <property name="templateProcessor" ref="webscripts.web.templateprocessor" />
      <property name="scriptProcessor" ref="webscripts.web.scriptprocessor" />
      <property name="configService" ref="pagerenderer.config" />
   </bean>
   
   <bean id="pagerenderer.registry" class="org.alfresco.web.scripts.DeclarativeRegistry">
      <property name="container" ref="pagerenderer.container" />
      <property name="uriIndex" ref="webscripts.index" />
      <property name="searchPath" ref="webscripts.searchpath" />
      <property name="defaultWebScript"><value>webscript.default</value></property>
   </bean>
   
   
   <!-- Resource Storage configuration -->
   <!-- TODO: replace with Remote store impl - load all resources via data WebScripts from remote repo -->
   <bean id="pagerenderer.classpathstore" class="org.alfresco.web.scripts.ClassPathStore" abstract="true" />

   <bean id="pagerenderer.pagestore" parent="pagerenderer.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/site-data/pages</value></property>
   </bean>

   <bean id="pagerenderer.pageassocstore" parent="pagerenderer.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/site-data/page-associations</value></property>
   </bean>

   <bean id="pagerenderer.templateconfigstore" parent="pagerenderer.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/site-data/template-instances</value></property>
   </bean>

   <bean id="pagerenderer.componentstore" parent="pagerenderer.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/site-data/components</value></property>
   </bean>

   <bean id="pagerenderer.templatestore" parent="pagerenderer.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/templates</value></property>
   </bean>

   <bean id="pagerenderer.templates.searchpath" class="org.alfresco.web.scripts.SearchPath">
      <property name="searchPath">
         <list>
            <ref bean="pagerenderer.templatestore" />
         </list>
      </property>
   </bean>


   <!--  Page Renderer Template Processor -->
   <bean id="pagerenderer.templateprocessor" class="org.alfresco.web.scripts.PresentationTemplateProcessor">
      <property name="searchPath" ref="pagerenderer.templates.searchpath" />
      <property name="defaultEncoding"><value>UTF-8</value></property>
   </bean>
   
</beans>
