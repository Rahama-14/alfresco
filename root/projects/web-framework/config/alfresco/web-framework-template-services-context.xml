<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

   <!-- Base config implementation that template extension beans extend from - for auto registration
        as an extension template object with a PresentationTemplateProcessor -->
   <bean id="baseTemplateExtension" abstract="true" init-method="register">
      <property name="processors">
         <list>
            <ref bean="webframework.webscripts.templateprocessor" />
            <ref bean="webframework.templateprocessor" />
         </list>
      </property>
   </bean>
   
   <!-- Example extension config
   <bean id="example" parent="baseTemplateExtension" class="org.yourclasspath.ExampleExtension">
      <property name="extensionName">
         <value>example</value>
      </property>
   </bean>
   -->

</beans>