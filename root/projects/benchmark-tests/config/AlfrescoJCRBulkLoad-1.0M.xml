<?xml version="1.0" encoding="UTF-8"?>
<testSuite name="ParsingPerformance" xmlns="http://www.sun.com/japex/testSuite">

    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/core/build/classes"/>       

    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-framework/lib/jdsl/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-framework/lib/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-framework/build/classes"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-framework/config"/>

    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/commons/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/jibx/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/jgroups/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/swarmcache/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/treecache/*.jar"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/3rd-party/lib/openoffice/*.jar"/>

    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/repository/build/classes"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/repository/config"/>

    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-tests/build/classes"/>
    <param name="japex.classPath" value="${ALFRESCO_PROJECTS}/benchmark-tests/config"/>

    <driver name="JAXPDriver">
        <param name="japex.driverClass" value="org.alfresco.benchmark.alfresco.jcr.AlfrescoJCRBulkLoadDriver"/>
        <param name="description" value="JCR Bulk Load Test"/>

    	<param name="japex.numberOfThreads" value="2"/>
    	<param name="japex.threadRampupTime" value="0"/>
    	<param name="japex.includeWarmupRun" value="false"/>

    </driver>

    <testCase name="JCR Bulk Load 1M">
        
        <!-- Number of available users -->
        <param name="alfresco.numberOfAvailableUsers" value="50"/>
    
    	<!-- Number of objects to bulk load in each test -->
    	<param name="alfresco.loadCount" value="500"/>
    
        <!-- 1000 -->
        <param name="japex.warmupIterations" value="0"/>            
    	<param name="japex.runIterations" value="1000"/>
    	<param name="japex.runDelay" value="0"/>
    	<param name="japex.runDelayVariation" value="0"/>
    </testCase>
    
</testSuite>
