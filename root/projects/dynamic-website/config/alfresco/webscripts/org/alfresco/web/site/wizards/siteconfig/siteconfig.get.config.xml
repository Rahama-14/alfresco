<wizard id="welcome">
	<title>Site Configuration</title>
	<page id="start" start="true" type="form">
		<buttons>
			<button id="cancel" label="Cancel" action="cancel"/>
			<button id="save" label="Save" action="transition" data="submit"/>
		</buttons>
		<data>
			<element id="websiteName" type="String" defaultValue="" />
			<element id="websiteDescription" type="String" defaultValue="" />
		</data>
	</page>
	<page id="submit" end="true" type="form">
		<data>
			<element id="websiteName" type="String" />
			<element id="websiteDescription" type="String" />
		</data>
	</page>	
</wizard>
