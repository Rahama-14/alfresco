<style type="text/css">

    div.left {
        float: left;
        width: ${widthLeft}px;
    }
    div.right {
        float: right;
        width: ${widthRight}px;
    }
    div.middle {
        padding: 0px ${widthLeft + horizontalGap}px 0px ${widthRight + horizontalGap}px;
        margin: 0px;
    }
    div.column-clear {
        clear: both;
        display: block;
        height: 1px;
        overflow: hidden;
        margin: 0;
        padding: 0px 0px ${verticalGap - 1}px 0px;
    }

</style>
