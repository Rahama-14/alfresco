<alfresco-config>

   <plug-ins>
      <element-readers>
         <element-reader element-name="web-studio" class="org.alfresco.web.config.WebStudioConfigElementReader"/>
	  </element-readers>
   </plug-ins>

   <config evaluator="string-compare" condition="WebFramework">

      <web-studio>

         <!-- Sets the default developer mode -->		
         <developer-mode>false</developer-mode>
         
         <!-- Applications Definitions -->
         <applications>
         
            <application>
               <id>surfsite</id>
               <title>Surf Site Application</title>
               <description>Configure your Surf Application</description>
               <image-url>/images/floatingmenu/webstudio-configuration-64.png</image-url>
               <bootstrap-classname>WebStudio.Applications.SurfSite</bootstrap-classname>
               <bootstrap-location>/overlay/default/applications/surfsite/surfsite.class.js</bootstrap-location>

               <!-- User Sandbox Tools -->
               <include-applet id="sandbox" />
               
               <!-- Site Configuration Elements -->
               <include-applet id="pages" />
               <include-applet id="templates" />
               <include-applet id="webcomponents" />
               <include-applet id="contentassociations" />               
                                
               <!-- 
               <include-applet id="search" />
               -->

            </application>

            <application>
               <id>surfassemble</id>
               <title>Surf Site Assembly Application</title>
               <description>Assemble your Surf Pages</description>
               <image-url>/images/floatingmenu/webstudio-assemble-64.png</image-url>
               <bootstrap-classname>WebStudio.Applications.SurfAssemble</bootstrap-classname>
               <bootstrap-location>/overlay/default/applications/surfassemble/surfassemble.class.js</bootstrap-location>

               <!-- User Sandbox Tools -->               
               <include-applet id="sandbox" />
               
               <!-- Content Assembly Behaviours -->
               <include-applet id="webcontent" />				
               <include-applet id="images" />					
               <include-applet id="videos" />
               <include-applet id="spaces" />
               <include-applet id="sites" />
               
               <!-- 
               <include-applet id="search" />
               -->

            </application>

            <application>
               <id>content</id>
               <title>Content Editor</title>
               <description>Edit and Update Content</description>
               <image-url>/images/floatingmenu/webstudio-content-64.png</image-url>
               <bootstrap-classname>WebStudio.Applications.Content</bootstrap-classname>
               <bootstrap-location>/overlay/default/applications/content/content.class.js</bootstrap-location>

               <!-- User Sandbox Tools -->               
               <include-applet id="sandbox" />

               <!-- Content Behaviours -->
               <include-applet id="webforms" />				
               <include-applet id="images" />					
               <include-applet id="videos" />

               <!-- 
               <include-applet id="search" />
               -->

            </application>

         </applications>

         <applets>
            <applet>
               <id>pages</id>
               <title>Pages</title>
               <description>Navigation Applet</description>
               <bootstrap-classname>WebStudio.Applets.Navigation</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/navigation/navigation.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>templates</id>
               <title>Templates</title>
               <description>Templates Applet</description>
               <bootstrap-classname>WebStudio.Applets.Templates</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/templates/templates.class.js</bootstrap-location>					
            </applet>
            <applet>
               <id>webcomponents</id>
               <title>Web Components</title>
               <description>Web Components Applet</description>
               <bootstrap-classname>WebStudio.Applets.WebComponents</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/webcomponents/webcomponents.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>contentassociations</id>
               <title>Content Associations</title>
               <description>Content Associations Applet</description>
               <bootstrap-classname>WebStudio.Applets.ContentAssociations</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/contentassociations/contentassociations.class.js</bootstrap-location>
            </applet>


            <applet>
               <id>webcontent</id>
               <title>Web Application Files</title>
               <description>Web Application Applet</description>
               <bootstrap-classname>WebStudio.Applets.WebContent</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/webcontent/webcontent.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>webforms</id>
               <title>Web Forms</title>
               <description>Web Forms Applet</description>
               <bootstrap-classname>WebStudio.Applets.WebForms</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/webforms/webforms.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>images</id>
               <title>Images</title>
               <description>Images Applet</description>
               <bootstrap-classname>WebStudio.Applets.Images</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/images/images.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>videos</id>
               <title>Videos</title>
               <description>Videos Applet</description>
               <bootstrap-classname>WebStudio.Applets.Videos</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/videos/videos.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>spaces</id>
               <title>Alfresco Spaces</title>
               <description>Spaces Applet</description>
               <bootstrap-classname>WebStudio.Applets.Spaces</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/spaces/spaces.class.js</bootstrap-location>
            </applet>
            <applet>
               <id>sites</id>
               <title>Alfresco Share Sites</title>
               <description>Sites Applet</description>
               <bootstrap-classname>WebStudio.Applets.Sites</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/sites/sites.class.js</bootstrap-location>
            </applet>
            
            <applet>
               <id>sandbox</id>
               <title>Web Project Sandbox</title>
               <description>Sandbox Applet</description>
               <bootstrap-classname>WebStudio.Applets.Sandbox</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/sandbox/sandbox.class.js</bootstrap-location>
            </applet>

            <!--
            <applet>
               <id>search</id>
               <title>Search</title>
               <description>Search Applet</description>
               <bootstrap-classname>WebStudio.Applets.Search</bootstrap-classname>
               <bootstrap-location>/overlay/default/applets/search/search.class.js</bootstrap-location>
            </applet>
            -->

         </applets>

      </web-studio>
		
   </config>	

</alfresco-config>
