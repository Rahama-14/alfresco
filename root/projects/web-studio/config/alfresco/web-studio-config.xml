<alfresco-config>

   <plug-ins>
      <element-readers>
         <element-reader element-name="web-studio" class="org.alfresco.web.config.WebStudioConfigElementReader"/>
	  </element-readers>
   </plug-ins>

	<config evaluator="string-compare" condition="WebFramework">
	
		<web-studio>
		
			<!-- Web Studio CSS assembly options -->
			<css-caching-enabled>false</css-caching-enabled>
			<css-compression-enabled>false</css-compression-enabled>
			
			<!-- Web Studio JS assembly options -->
			<js-caching-enabled>false</js-caching-enabled>
			<js-compression-enabled>false</js-compression-enabled>

			<!-- Applications Definitions -->		
			<applications>
				<application>
				
					<!-- information about the application -->
					<id>webdesigner</id>
					<title>Web Designer</title>
					<description>Web Designer Application</description>
					<bootstrap-classname>WebStudio.Applications.WebDesigner</bootstrap-classname>
					<bootstrap-location>/overlay/default/applications/webdesigner/webdesigner.class.js.jsp</bootstrap-location>
					
					<!-- the applets to include -->
					<include-applet id="navigation" />
					<include-applet id="templates" />
					<include-applet id="webcomponents" />
					<include-applet id="webcontent" />
					<include-applet id="spaces" />
					<include-applet id="sites" />
					
					<!--
					<include-applet id="search" />
					-->	
						
				</application>
			</applications>
			
			<applets>
				<applet>
					<id>navigation</id>
					<title>Navigation</title>
					<description>Navigation Applet</description>
					<bootstrap-classname>WebStudio.Applets.Navigation</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/navigation/navigation.class.js.jsp</bootstrap-location>
				</applet>
				<applet>
					<id>search</id>
					<title>Search</title>
					<description>Search Applet</description>
					<bootstrap-classname>WebStudio.Applets.Search</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/search/search.class.js.jsp</bootstrap-location>

					<!-- applet dependencies -->
					<!--					
					<dependency>
						<id>search-view</id>
						<javascript>/overlay/default/js/components/${id}.class.js.jsp</javascript>
					</dependency>
					-->
					
				</applet>
				<applet>
					<id>sites</id>
					<title>Sites</title>
					<description>Sites Applet</description>
					<bootstrap-classname>WebStudio.Applets.Sites</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/sites/sites.class.js.jsp</bootstrap-location>
				</applet>
				<applet>
					<id>spaces</id>
					<title>Spaces</title>
					<description>Spaces Applet</description>
					<bootstrap-classname>WebStudio.Applets.Spaces</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/spaces/spaces.class.js.jsp</bootstrap-location>
				</applet>
				<applet>
					<id>templates</id>
					<title>Templates</title>
					<description>Templates Applet</description>
					<bootstrap-classname>WebStudio.Applets.Templates</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/templates/templates.class.js.jsp</bootstrap-location>					
					
					<!-- applet dependencies -->
					<!--
					<dependency>
						<id>template-designer</id>
						<javascript>/overlay/default/js/components/${id}.class.js</javascript>
					</dependency>					
					<dependency>>
						<id>templates-view</id>
						<javascript>/overlay/default/js/components/${id}.class.js</javascript>
						<css>/overlay/default/css/components/${id}.class.css.jsp</css>
					</dependency>>
					-->	
									
				</applet>
				<applet>
					<id>webcomponents</id>
					<title>Web Components</title>
					<description>Web Components Applet</description>
					<bootstrap-classname>WebStudio.Applets.WebComponents</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/webcomponents/webcomponents.class.js.jsp</bootstrap-location>
				</applet>
				<applet>
					<id>webcontent</id>
					<title>Web Content</title>
					<description>Web Content Applet</description>
					<bootstrap-classname>WebStudio.Applets.WebContent</bootstrap-classname>
					<bootstrap-location>/overlay/default/applets/webcontent/webcontent.class.js.jsp</bootstrap-location>
				</applet>
			</applets>
			
		</web-studio>
		
	</config>	

</alfresco-config>
