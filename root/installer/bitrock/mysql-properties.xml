<component>
    <name>mysqlwriteproperties</name>
    <description>MySQL Write Properties</description>
    <canBeEdited>0</canBeEdited>
    <show>0</show>
    <selected>1</selected>
    <readyToInstallActionList>
        <actionGroup>
            <actionList>
                <iniFileGet>
                    <file>${installdir}/properties.ini</file>
                    <section>MySQL</section>
                    <key>mysql_port</key>
                    <variable>database_port</variable>
                </iniFileGet>
                <iniFileGet>
                    <file>${installdir}/properties.ini</file>
                    <section>MySQL</section>
                    <key>mysql_root_directory</key>
                    <variable>database_root_directory</variable>
                </iniFileGet>
                <iniFileGet>
                    <file>${installdir}/properties.ini</file>
                    <section>MySQL</section>
                    <key>mysql_binary_directory</key>
                    <variable>database_binary_directory</variable>
                </iniFileGet>
                <iniFileGet>
                    <file>${installdir}/properties.ini</file>
                    <section>MySQL</section>
                    <key>mysql_arguments</key>
                    <variable>database_arguments</variable>
                </iniFileGet>
                <iniFileGet>
                    <file>${installdir}/properties.ini</file>
                    <section>MySQL</section>
                    <key>mysql_unique_service_name</key>
                    <variable>mysql_unique_service_name</variable>
                    <ruleList>
                        <platformTest type="windows"/>
                    </ruleList>
                </iniFileGet>
            </actionList>
            <ruleList>
                <fileExists path="${installdir}/properties.ini"/>
            </ruleList>
        </actionGroup>
    </readyToInstallActionList>
    <postInstallationActionList>
        <iniFileSet>
            <file>${installdir}/properties.ini</file>
            <section>MySQL</section>
            <key>mysql_port</key>
            <value>${database_port}</value>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}/properties.ini</file>
            <section>MySQL</section>
            <key>mysql_root_directory</key>
            <value>${database_root_directory}</value>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}/properties.ini</file>
            <section>MySQL</section>
            <key>mysql_binary_directory</key>
            <value>${database_binary_directory}</value>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}/properties.ini</file>
            <section>MySQL</section>
            <key>mysql_arguments</key>
            <value>${database_arguments}</value>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}/properties.ini</file>
            <section>MySQL</section>
            <key>mysql_unique_service_name</key>
            <value>${mysql_unique_service_name}</value>
            <ruleList>
                <platformTest type="windows"/>
            </ruleList>
        </iniFileSet>
    </postInstallationActionList>
</component>

