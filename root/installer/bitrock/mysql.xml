                    <files>${mysql_root_directory}/scripts/myscript.sh; ${mysql_root_directory}/scripts/myscript_upgrade.sh; ${mysql_root_directory}/scripts/ctl.sh</files>
                    <substitutionList>
                        <substitution>
                            <pattern>@@BITROCK_MYSQL_PASSWORD@@</pattern>
