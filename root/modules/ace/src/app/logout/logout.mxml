<?xml version="1.0" encoding="utf-8"?>

<logout:LogoutClass 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:logout="app.logout.*" 
	styleName="logout">	

   <!-- Import css style sheet -->
   <mx:Style source="logout.css"/> 

   <mx:HBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">

		<!-- Show image -->
		<mx:VBox>
			<mx:Spacer height="20"/>
			<mx:Image source="@Embed(source='../../images/user_icon.png')"/>	
		</mx:VBox>   
   		
   		<mx:Spacer width="15"/>
   			
        <!-- User name and logout link -->
		<mx:VBox horizontalAlign="left">
      		<mx:Text id="logoutLinkButton" styleName="myStyle" text="Logout" click="onLogoutButtonLinkClick()"/>
      		<mx:Spacer height="1"/>
  	  		<mx:Image source="@Embed(source='../../images/enterprise_label.png')" />	   
		</mx:VBox>
  
	</mx:HBox>	
	
</logout:LogoutClass>
				            