<?xml version="1.0" encoding="utf-8"?>

<logout:LogoutClass 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:logout="app.logout.*" 
	xmlns:link="org.alfresco.framework.control.hyperlink.*" 
	width="17%" height="100%"	
	styleName="logout">	
	
	
   <!-- Import css style sheet -->
   <mx:Style source="logout.css"/> 

   <mx:HBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">

		<!-- Show image -->
		<mx:VBox height="100%">
			<mx:Spacer height="10"/>
			<mx:Image source="@Embed(source='../../images/user_icon.png')"/>	
		</mx:VBox>   
   		
   		<mx:Spacer width="5"/>
   			
        <!-- User name and logout link -->
		<mx:VBox horizontalAlign="left" verticalAlign="top" height="100%">
			
			<mx:Spacer height="5"/>
      		<link:HyperLink id="logoutLinkButton" text="Logout" click="confirm()" styleName="logoutLink" rolledOverStyleName="logoutLinkRollOver"/>
  	  		<mx:Image source="@Embed(source='../../images/enterprise_label.png')" />
  	  		
  	  	</mx:VBox>
  
	</mx:HBox>	
	
</logout:LogoutClass>
				            