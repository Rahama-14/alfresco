<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"  width="362" height="326">
    
    <!-- State defintitions -->
    <mx:states>
        <mx:State name="InvalidCredentials">
            <mx:AddChild relativeTo="{hBox}" position="lastChild">
                <mx:Text id="errorMessage" />
            </mx:AddChild>
        </mx:State>
    </mx:states>
	
	<!-- Import css style sheet -->
    <mx:Style source="login.css"/> 
   
   	<!-- Import action script -->
   	<mx:Script source="loginScript.as"/> 
   	
	<mx:Panel>
	    <mx:VBox id="hBox">	    		    
			<mx:Form>
				<mx:Image source="@Embed(source='../../images/ace_white.png')"/>
				<mx:FormItem label="User:" styleName="userlabel">
					<mx:TextInput id="username" styleName="userinput" />
				</mx:FormItem>						
				<mx:FormItem label="Password:" styleName="passlabel">
					<mx:TextInput id="password" displayAsPassword="true"  styleName="passinput"/>
				</mx:FormItem>
				<mx:FormItem>
					<mx:Button label="Login" id="loginBtn" click="onLoginButtonLinkClick()"/>								
				</mx:FormItem>	
			</mx:Form>
		</mx:VBox>
	</mx:Panel>
	
</mx:Canvas>
