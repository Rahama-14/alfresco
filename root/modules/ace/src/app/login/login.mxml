<?xml version="1.0" encoding="utf-8"?>
<login:LoginClass 
	  xmlns:mx="http://www.adobe.com/2006/mxml"
	  xmlns:login="app.login.*" 
	  width="300"
	  verticalGap="0" horizontalGap="0">
    
    <!-- State defintitions -->
    <login:states>
        <mx:State name="InvalidCredentials">
            <mx:AddChild relativeTo="{this}" position="lastChild">
                <mx:Text id="errorMessage"/>
            </mx:AddChild>
        </mx:State>
    </login:states> 
	
	<!-- Import css style sheet -->
    <mx:Style source="login.css"/> 

	<mx:Canvas width="100%" height="31" styleName="loginTopCanvas"/>
	<mx:VBox styleName="loginMain" width="100%" height="100%">
		<mx:Image source="@Embed(source='../../images/ace_white.png')"/>		    		    
		<mx:Form width="100%">				
			<mx:FormItem label="User:" styleName="userlabel" width="100%">
				<mx:TextInput id="username" styleName="userinput" width="100%" enter="onLoginButtonLinkClick()"/>
			</mx:FormItem>						
			<mx:FormItem label="Password:" styleName="passlabel" width="100%">
				<mx:TextInput id="password" displayAsPassword="true" styleName="passinput" width="100%" enter="onLoginButtonLinkClick()"/>
			</mx:FormItem>
			<mx:FormItem width="100%">
				<mx:HBox width="100%">
					<mx:Spacer width="100%"/>
					<mx:Button label="Login" id="loginBtn" click="onLoginButtonLinkClick()"/>								
				</mx:HBox>						
			</mx:FormItem>
		</mx:Form>
	</mx:VBox>		
	<mx:Canvas width="100%" height="31" styleName="loginBottomCanvas"/>
	
</login:LoginClass>
