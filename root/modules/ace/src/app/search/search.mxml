<?xml version="1.0" encoding="utf-8"?>
<search:SearchClass xmlns:mx="http://www.adobe.com/2006/mxml" 
		   			xmlns:search="app.search.*"
		   			xmlns:link="org.alfresco.framework.control.hyperlink.*" 
		   			xmlns:local="*" 
					styleName="search">	

	<!-- Import css style sheet -->
    <mx:Style source="search.css"/> 
      		
	<mx:HBox width="100%" height="100%"  horizontalAlign="left" verticalAlign="middle" >
		
		<mx:Spacer width="25"/>	
		<mx:Image source="@Embed(source='../../images/ace-mark.png')" height="66"/>	
		
		<!-- <mx:Spacer width="15"/>	 -->
		
		<mx:HBox width="100%" horizontalAlign="center">
			
			<mx:TextInput id="searchTxt" width="250"  enter="onSearchButtonLinkClick(searchTxt.text)" />
			<mx:Spacer width="8"/> 
			<local:SearchButton label="Search" click="onSearchButtonLinkClick(searchTxt.text)"/>
			<mx:Spacer width="15"/>  
			<link:HyperLink text="Advanced Search" styleName="advancedSeachLink" rolledOverStyleName="advancedSeachLinkRollOver"/>
		
		</mx:HBox>
					
	</mx:HBox>
	
</search:SearchClass>			