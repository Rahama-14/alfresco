<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	styleName="search">	

	<!-- Import css style sheet -->
    <mx:Style source="search.css"/> 
   
   	<!-- Import action script -->
   	<mx:Script source="searchScript.as"/> 
	
	<mx:HBox width="100%" height="100%" verticalAlign="middle">
		
		<mx:Spacer width="25"/>	
		<mx:Image source="@Embed(source='../../images/ace-mark.png')" />	
		<mx:Spacer width="30"/>	
		<mx:TextInput id="searchTxt" width="250" enter="onSearchButtonLinkClick()" />
		<mx:Spacer width="15"/>
		<mx:Button id="SearchBtn"  label="Search"  cornerRadius="0" color="#FFFFFF" click="onSearchButtonLinkClick()"/>
		<mx:Spacer width="25"/>
		<mx:Label text="Advanced Search" textDecoration="underline" color="#FFFFFF"/>
					
	</mx:HBox>
	
</mx:Canvas>			