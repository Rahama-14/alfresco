<documentList>
   <actionSets>
      <actionSet id="empty"></actionSet>

      <actionSet id="record">
         <action type="simple-link" id="onActionDownload" permission="download" href="{downloadUrl}" label="actions.download" />
         <action type="simple-link" id="onActionEditDetails" permission="EditDeclaredRecordMetadata" href="{editMetadataUrl}" label="actions.edit-details" />
         <action type="action-link" id="onActionReviewed" permission="CycleVitalRecords" label="actions.reviewed" />
         <action type="action-link" id="onActionUndeclare" permission="UndeclareRecords" label="actions.undeclare" />
         <action type="action-link" id="onActionCutoff" permission="ApproveRecordsScheduledForCutoff,cutoff" label="actions.cutoff" />
         <action type="action-link" id="onActionUndoCutoff" permission="ApproveRecordsScheduledForCutoff,undoCutoff" label="actions.undo-cutoff" />
         <action type="action-link" id="onActionDestroy" permission="DestroyRecordsScheduledForDestruction" label="actions.destroy" />
         <action type="action-link" id="onActionTransfer" permission="AuthorizeAllTransfers" label="actions.transfer" />
         <action type="action-link" id="onActionAccession" permission="AuthorizeNominatedTransfers" label="actions.accession" />
         <action type="action-link" id="onActionFreeze" permission="freeze" label="actions.freeze" />
         <action type="action-link" id="onActionUnfreeze" permission="unfreeze" label="actions.unfreeze" />
         <action type="action-link" id="onActionCopyTo" permission="" label="actions.copy-to" />
         <action type="action-link" id="onActionMoveTo" permission="MoveRecords" label="actions.move-to" />
         <action type="action-link" id="onActionFileTo" permission="" label="actions.file-to" />
         <action type="action-link" id="onActionManagePermissions" permission="ManageAccessControls" label="actions.manage-permissions" />
         <action type="action-link" id="onActionDelete" permission="Delete" label="actions.delete" />
      </actionSet>

      <actionSet id="undeclaredRecord">
         <action type="simple-link" id="onActionDownload" permission="download" href="{downloadUrl}" label="actions.download" />
         <action type="simple-link" id="onActionEditDetails" permission="EditRecordMetadata" href="{editMetadataUrl}" label="actions.edit-details" />
         <action type="action-link" id="onActionDeclare" permission="DeclareRecords" label="actions.declare" />
         <action type="action-link" id="onActionUploadNewVersion" permission="HIDDEN" label="actions.upload-new-version" />
         <action type="action-link" id="onActionSplitEmail" permission="split-email" label="actions.split-email" />
         <action type="action-link" id="onActionCopyTo" permission="" label="actions.copy-to" />
         <action type="action-link" id="onActionMoveTo" permission="" label="actions.move-to" />
         <action type="action-link" id="onActionFileTo" permission="" label="actions.file-to" />
         <action type="action-link" id="onActionManagePermissions" permission="ManageAccessControls" label="actions.manage-permissions" />
         <action type="action-link" id="onActionDelete" permission="Delete" label="actions.delete" />
      </actionSet>
   </actionSets>
</documentList>