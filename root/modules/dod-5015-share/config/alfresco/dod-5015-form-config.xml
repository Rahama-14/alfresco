<alfresco-config>
   
   <!-- Records Management Creation Forms -->
   <config evaluator="model-type" condition="dod:recordSeries">
      <forms>
         <form>
            <field-visibility>
               <!-- 
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
               -->
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
            </field-visibility>
            <create-form template="dod5015-create-container.ftl" />
         </form>
      </forms>
   </config>
   
   <config evaluator="model-type" condition="dod:recordCategory">
      <forms>
         <form>
            <field-visibility>
               <!-- 
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
               <show id="rma:reviewPeriod" />
               <show id="rma:vitalRecordIndicator" />
               -->
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:dispositionSchedule" />
            </field-visibility>
            <create-form template="dod5015-create-container.ftl" />
         </form>
      </forms>
   </config>
   
   <config evaluator="model-type" condition="rma:recordFolder">
      <forms>
         <form>
            <field-visibility>
               <!--
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
               <show id="rma:location" />
               <show id="rma:supplementalMarkingList" />
               -->
               <hide id="sys:node-uuid" />
               <hide id="sys:store-protocol" />
               <hide id="sys:store-identifier" />
               <hide id="sys:node-dbid" />
               <hide id="cm:created" />
               <hide id="cm:creator" />
               <hide id="cm:modified" />
               <hide id="cm:modifier" />
               <hide id="cm:accessed" />
               <hide id="cm:contains" />
               <hide id="rma:isClosed" />
            </field-visibility>
            <create-form template="dod5015-create-container.ftl" />
         </form>
      </forms>
   </config>

   <!-- Records Management Viewing and Editing Forms -->
   <config evaluator="node-type" condition="rma:dispositionSchedule">
      <forms>
         <form>
            <field-visibility>
               <show id="rma:dispositionAuthority" />
               <show id="rma:dispositionInstructions" />
               <show id="rma:recordLevelDisposition" />
            </field-visibility>
            <appearance>
               <field id="rma:recordLevelDisposition" label-id="label.recordLevelDisposition">
                  <control template="controls/selectone.ftl">
                     <control-param name="options">true|{label.record},false|{label.folder}</control-param>
                  </control>
               </field>
            </appearance>
         </form>
      </forms>
   </config>

   <config evaluator="node-type" condition="dod:recordSeries">
      <forms>
         <form>
            <field-visibility>
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
            </field-visibility>
         </form>
      </forms>
   </config>
   
   <config evaluator="node-type" condition="dod:recordCategory">
      <forms>
         <form>
            <field-visibility>
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
               
               <show id="rma:reviewPeriod" />
               <show id="rma:vitalRecordIndicator" />
            </field-visibility>
         </form>
      </forms>
   </config>
   
   <config evaluator="node-type" condition="rma:recordFolder">
      <forms>
         <form>
            <field-visibility>
               <show id="cm:name" />
               <show id="cm:title" />
               <show id="cm:description" />
               <show id="rma:identifier" />
               
               <show id="rma:location" />
               <show id="rma:supplementalMarkingList" />
            </field-visibility>
         </form>
      </forms>
   </config>
   
   <config evaluator="node-type" condition="cm:content">
      <forms>
         <form>
            <field-visibility>
               <!-- rma:record aspect -->
               <show id="rma:identifier" />
               <show id="rma:location" />
               <show id="rma:supplementalMarkingList" />
               <show id="rma:dateFiled" />
               <show id="rma:publicationDate" />
               <show id="rma:originator" />
               <show id="rma:originatingOrganization" />
               <show id="rma:supplementalMarkingList" />
               <show id="rma:mediaType" />
               <show id="rma:format" />
               <show id="rma:dateReceived" />
               <show id="rma:address" />
               <show id="rma:otherAddress" />
               
               <!-- rma:scannedRecord aspect -->
               <show id="dod:scannedFormat" />
               <show id="dod:scannedFormatVersion" />
               <show id="dod:resolutionX" />
               <show id="dod:resolutionY" />
               <show id="dod:scannedBitDepth" />
               
               <!-- rma:pdfRecord aspect -->
               <show id="dod:producingApplication" />
               <show id="dod:producingApplicationVersion" />
               <show id="dod:pdfVersion" />
               <show id="dod:creatingApplication" />
               <show id="dod:documentSecuritySettings" />
               
               <!-- rma:digitalPhotographRecord aspect -->
               <show id="dod:caption" />
               <show id="dod:photographer" />
               <show id="dod:copyright" />
               <show id="dod:bitDepth" />
               <show id="dod:imageSizeX" />
               <show id="dod:imageSizeY" />
               <show id="dod:imageSource" />
               <show id="dod:compression" />
               <show id="dod:iccIcmProfile" />
               <show id="dod:exifInformation" />
            
               <!-- rma:webRecord aspect -->
               <show id="dod:webFileName" />
               <show id="dod:webPlatform" />
               <show id="dod:webSiteName" />
               <show id="dod:webSiteURL" />
               <show id="dod:captureMethod" />
               <show id="dod:captureDate" />
               <show id="dod:contact" />
               <show id="dod:contentManagementSystem" />
               
               <!-- rma:vitalRecord aspect -->
               <show id="rma:reviewAsOf" />
               
               <!-- rma:cutOff aspect -->
               <show id="rma:cutOffDate" />
            </field-visibility>
            <appearance>
               <field id="rma:reviewAsOf" read-only="true" />
               <field id="rma:cutOffDate" read-only="true" />
            </appearance>
         </form>
      </forms>
   </config>
   
</alfresco-config>