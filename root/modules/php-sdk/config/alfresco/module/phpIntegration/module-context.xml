<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>

    <!-- PHP Engine -->
    <bean id="phpEngine" class="org.alfresco.module.phpIntegration.PHPEngine" init-method="init">    	  
    	<property name="serviceRegistry">
    		<ref bean="ServiceRegistry"/>
    	</property> 
    </bean>
    
    <!-- PHP Template Processor -->    
    <bean id="phpTemplateProcessor" parent="baseTemplateProcessor" class="org.alfresco.module.phpIntegration.PHPTemplateProcessor">
    	<property name="phpEngine">
    		<ref bean="phpEngine"/>
    	</property>     
    	<property name="name">
			<value>php</value>
		</property>
		<property name="extension">
			<value>php</value>
		</property>	   
    </bean>
    
