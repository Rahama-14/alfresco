<project name="continuous-enterprise" default="continuous" >

   <!-- ********************************** -->
   <!-- ** Initialisation/Configuration ** -->
   <!-- ********************************** -->

   <property name="dir.common" value="${basedir}" />
   <import file="${dir.common}/continuous.xml" />

   <target name="init" depends="common-init.init">
      <property name="file.name.start" value="alfresco-enterprise"/>
      <property file="continuous.properties"/>
      <property name="file.name.build" value="build-enterprise.xml"/>
      <property name="excludes.dist.src" value="${excludes.dist.src.enterprise}"/>
   </target>
   
   <target name="assemble-jboss-common" depends="continuous.assemble-jboss-common">
      <copy todir="${dir.assemble.jboss}/jboss/server/default/conf" overwrite="yes">
         <fileset dir="${dir.projects}/enterprise/${dir.name.config}" />
      </copy>
   </target>

</project>
