<alfresco-config>
   
   <plug-ins>
      <evaluators>
         <evaluator id="node-type" class="org.alfresco.web.config.NodeTypeEvaluator" />
         <evaluator id="aspect-name" class="org.alfresco.web.config.AspectEvaluator" />
      </evaluators>
      <element-readers>
         <element-reader element-name="server" class="org.alfresco.web.config.ServerElementReader"/>
         <element-reader element-name="property-sheet" class="org.alfresco.web.config.PropertySheetElementReader"/>
      </element-readers>
   </plug-ins>
   
   <config>
      <server>
         <error-page>/jsp/error.jsp</error-page>
         <login-page>/jsp/login.jsp</login-page>
      </server>
      <repository>
         <store-url>workspace://SpacesStore</store-url>
         <root-path>Company Home</root-path>
         <glossary-folder-name>Glossary</glossary-folder-name>
         <templates-folder-name>Templates</templates-folder-name>
      </repository>
      <admin>
         <initial-password>admin</initial-password>
      </admin>
   </config>
   
   <config evaluator="node-type" condition="content">
      <property-sheet>
         <show-property name="name" displayLabel="File Name" />
         <show-property name="mimetype" displayLabel="Content Type" converter="org.alfresco.faces.MimeTypeConverter" />
         <show-property name="title" displayLabel="Title" />
         <show-property name="description" displayLabel="Description" />
         <show-property name="size" displayLabel="Size" converter="org.alfresco.faces.ByteSizeConverter" />
         <show-property name="creator" displayLabel="Author" />
      </property-sheet>
   </config>
   
   <config evaluator="node-type" condition="folder">
      <property-sheet>
         <show-property name="name" displayLabel="Name" />
         <show-property name="description" displayLabel="Description" />
      </property-sheet>
   </config>
   
   <config evaluator="aspect-name" condition="auditable">
      <property-sheet>
         <show-property name="created" displayLabel="Created" readOnly="true" />
         <show-property name="modified" displayLabel="Modified" readOnly="true" />
      </property-sheet>
   </config>
   
   <config evaluator="aspect-name" condition="complianceable">
      <property-sheet>
         <show-property name="removeAfter" displayLabel="Remove After" />
      </property-sheet>
   </config>
   
   <config evaluator="aspect-name" condition="dublincore">
      <property-sheet>
         <show-property name="publisher" displayLabel="Publisher" />
         <show-property name="contributor" displayLabel="Contributor" />
         <show-property name="type" displayLabel="Type" />
         <show-property name="identifier" displayLabel="Identifier" />
         <show-property name="dcsource" displayLabel="Source" />
         <show-property name="coverage" displayLabel="Coverage" />
         <show-property name="rights" displayLabel="Rights" />
         <show-property name="subject" displayLabel="Subject" />
      </property-sheet>
   </config>
   
   <config evaluator="aspect-name" condition="effectivity">
      <property-sheet>
         <show-property name="from" displayLabel="Effective From" />
         <show-property name="to" displayLabel="Effective To" />
      </property-sheet>
   </config>
   
   <config evaluator="aspect-name" condition="summarizable">
      <property-sheet>
         <show-property name="summary" displayLabel="Summary" />
      </property-sheet>
   </config>
   
   <config evaluator="string-compare" condition="New Rule Wizard">
      <aspects>
         <aspect id="generalclassifiable" description="Classifiable"/>
         <aspect id="complianceable" description="Complianceable"/>
         <aspect id="dublincore" description="Dublin Core"/>
         <aspect id="effectivity" description="Effectivity"/>
         <aspect id="summarizable" description="Summarizable"/>
         <aspect id="versionable" description="Versionable"/>
      </aspects>
      <transformers>
         <transformer id="text/html" description="HTML" />
         <transformer id="application/pdf" description="PDF" />
         <transformer id="text/plain" description="Text" />
         <transformer id="text/xml" description="XML" />
         <transformer id="application/x-shockwave-flash" description="Flash" />
         <transformer id="image/gif" description="GIF" />
         <transformer id="image/jpeg" description="JPEG" />
      </transformers>
      <image-transformers>
         <transformer id="image/gif" description="GIF" />
         <transformer id="image/jpeg" description="JPG" />
         <transformer id="image/png" description="PNG" />
      </image-transformers>
   </config>
   
</alfresco-config>
