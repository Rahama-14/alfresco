   <!-- ==================== MANAGED BEANS ==================== -->
   <managed-bean>
      <description>
         The bean that backs up the Login screen
      </description>
      <managed-bean-name>LoginBean</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.LoginBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>navigator</property-name>
         <value>#{NavigationBean}</value>
      </managed-property>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{AlfNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>authenticationService</property-name>
         <value>#{authenticationService}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that holds navigation state.
      </description>
      <managed-bean-name>NavigationBean</managed-bean-name>
