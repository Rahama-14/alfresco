         <value>#{AlfNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>searchService</property-name>
         <value>#{AlfSearchService}</value>
      </managed-property>
      <managed-property>
         <property-name>namespaceService</property-name>
         <value>#{AlfNamespaceService}</value>
      </managed-property>
   </managed-bean>
   
