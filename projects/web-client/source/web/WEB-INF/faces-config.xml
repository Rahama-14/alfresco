<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

   <!-- ==================== APPLICATION ==================== -->
   <application>
      <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
      <locale-config>
         <default-locale>en</default-locale>
      </locale-config>
   </application>
   
   
   <!-- ==================== MANAGED BEANS ==================== -->
   <managed-bean>
      <description>
         The bean that backs up the Login screen
      </description>
      <managed-bean-name>LoginBean</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.LoginBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <!-- default value forced for a managed property (for now) -->
      <managed-property>
         <property-name>name</property-name>
         <property-class>java.lang.String</property-class>
         <value>admin</value>
      </managed-property>
   </managed-bean>
      
   <managed-bean>
      <description>
         The bean that backs up the New Space Wizard
      </description>
      <managed-bean-name>NewSpaceWizard</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.wizard.NewSpaceWizard</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{indexingNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>searchService</property-name>
         <value>#{searcherComponent}</value>
      </managed-property>
      <managed-property>
         <property-name>navigator</property-name>
         <value>#{NavigationBean}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that backs up the New Space Dialog
      </description>
      <managed-bean-name>NewSpaceDialog</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.wizard.NewSpaceWizard</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{indexingNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>searchService</property-name>
         <value>#{searcherComponent}</value>
      </managed-property>
      <managed-property>
         <property-name>navigator</property-name>
         <value>#{NavigationBean}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that backs up the Add Content Wizard
      </description>
      <managed-bean-name>AddContentWizard</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.wizard.AddContentWizard</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{indexingNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>contentService</property-name>
         <value>#{contentService}</value>
      </managed-property>
      <managed-property>
         <property-name>navigator</property-name>
         <value>#{NavigationBean}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that holds navigation state.
      </description>
      <managed-bean-name>NavigationBean</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.NavigationBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{indexingNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>searchService</property-name>
         <value>#{searcherComponent}</value>
      </managed-property>
   </managed-bean>
   
   <managed-bean>
      <description>
         The bean that holds folder browse state.
      </description>
      <managed-bean-name>BrowseBean</managed-bean-name>
      <managed-bean-class>org.alfresco.web.bean.BrowseBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
      <managed-property>
         <property-name>nodeService</property-name>
         <value>#{indexingNodeService}</value>
      </managed-property>
      <managed-property>
         <property-name>searchService</property-name>
         <value>#{searcherComponent}</value>
      </managed-property>
      <managed-property>
         <property-name>navigator</property-name>
         <value>#{NavigationBean}</value>
      </managed-property>
   </managed-bean>
   
   
   <!-- ==================== NAVIGATION ==================== -->
   <!-- navigation rules describe the navigation cases between views using the -->
   <!-- outcomes from action methods or the outcome from a default action impl -->
   <navigation-rule>
      <description>
         The decision rule used by the NavigationHandler to
         determine which view must be displayed after the
         current view, login.jsp is processed.
      </description>
      <from-view-id>/jsp/login.jsp</from-view-id>
      <navigation-case>
         <description>
             Indicates to the NavigationHandler that the browse.jsp
             view must be displayed if the Action referenced by a 
             UICommand component on the login.jsp view returns 
             the outcome "success".
         </description>
         <from-outcome>success</from-outcome>
         <to-view-id>/jsp/browse/browse.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <!-- Browse screen action outcomes -->
   <navigation-rule>
      <from-view-id>/jsp/browse/browse.jsp</from-view-id>
      <navigation-case>
         <from-outcome>createSpace</from-outcome>
         <to-view-id>/jsp/dialog/new-space.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>createAdvancedSpace</from-outcome>
         <to-view-id>/jsp/wizard/new-space/create-from.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>deleteSpace</from-outcome>
         <to-view-id>/jsp/browse/delete-space.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>addContent</from-outcome>
         <to-view-id>/jsp/wizard/add-content/upload.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-outcome>showDocDetails</from-outcome>
         <to-view-id>/jsp/dialog/document-details.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <!-- rule to get back to the Browse page from anywhere (e.g. breadcrumb click, finish on dialog) -->
   <navigation-rule>
      <from-view-id>/jsp/*</from-view-id>
      <navigation-case>
         <from-outcome>browse</from-outcome>
         <to-view-id>/jsp/browse/browse.jsp</to-view-id>
      </navigation-case>
   </navigation-rule>
      
</faces-config>
