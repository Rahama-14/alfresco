<alfresco-config>
   
   <plug-ins>
      <evaluators>
         <evaluator id="node-type" class="org.alfresco.web.config.NodeTypeEvaluator" />
         <evaluator id="aspect-name" class="org.alfresco.web.config.AspectEvaluator" />
      </evaluators>
      <element-readers>
         <element-reader element-name="server" class="org.alfresco.web.config.ServerElementReader"/>
         <element-reader element-name="property-sheet" class="org.alfresco.web.config.PropertySheetElementReader"/>
         <element-reader element-name="mimetypes" class="org.alfresco.web.config.MimeTypesElementReader"/>
      </element-readers>
   </plug-ins>
   
   <config>
      <server>
         <mode>servlet</mode>
         <error-page>/jsp/error.jsp</error-page>
      </server>
   </config>
   
   <config evaluator="aspect-name" condition="uifacets">
      <property-sheet>
         <show-property name="name" displayLabel="Name" />
         <show-property name="description" displayLabel="Description" />
      </property-sheet>
   </config>
   
   <config evaluator="node-type" condition="folder">
      <property-sheet>
         <show-property name="created" displayLabel="Created" readOnly="true" />
         <show-property name="modified" displayLabel="Modified" readOnly="true" />
      </property-sheet>
   </config>
   
</alfresco-config>