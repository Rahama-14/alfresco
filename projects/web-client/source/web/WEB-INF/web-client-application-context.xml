<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
   
   <bean id="configSource" class="org.alfresco.config.source.WebAppConfigSource">
      <constructor-arg>
         <list>
            <value>/WEB-INF/web-client-config.xml</value>
            <!--<value>/WEB-INF/web-client-config-zoo.xml</value>-->
         </list>
      </constructor-arg>
   </bean>
   
   <bean id="configService" class="org.alfresco.config.xml.XMLConfigService" init-method="init">
      <constructor-arg>
         <ref bean="configSource"/>
      </constructor-arg>
   </bean>
   
   <!-- NOTE: This references a bean in the repository Spring configuration -->
   <bean id="dataDictionary" class="org.alfresco.web.bean.repository.DataDictionary">
      <constructor-arg>
         <ref bean="AlfDictionaryService"/>
      </constructor-arg>
   </bean>
   
   <!-- bean to represent the currently logged in user, this will eventually be retrieved from the repo -->
   <bean id="currentUser" class="org.alfresco.web.bean.repository.User">
      <constructor-arg>
         <value>admin</value>
      </constructor-arg>
   </bean>
   
</beans>
