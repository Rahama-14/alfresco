<alfresco-config>
   
   <plug-ins>
      <evaluators>
         <evaluator id="type-name" class="org.alfresco.config.evaluator.StringEvaluator" />
      </evaluators>
   </plug-ins>
      
   <!-- global config section -->
   <config>
      <properties>
         <property name="name" />
      </properties>
   </config>
   
   <config evaluator="type-name" condition="base">
      <properties>
         <property name="description" />
         <property name="created" />
         <property name="modified" />
      </properties>
   </config>
   
   <config evaluator="type-name" condition="SOP">
      <properties>
         <property name="description" />
         <property name="modified" />
         <property name="effective" />
         <property name="approved" />
      </properties>
   </config>
   
</alfresco-config>