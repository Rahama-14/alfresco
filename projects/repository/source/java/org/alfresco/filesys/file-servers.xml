<alfresco-config area="file-servers">

	<config evaluator="string-compare" condition="CIFS Server">
		<host name="ALFRESCO" domain="STARLASOFT"/>
	   	<comment>Alfresco CIFS server</comment>

			<!-- Set to the broadcast mask for the subnet -->
      <broadcast>255.255.255.255</broadcast>

			<!-- Use Java socket based NetBIOS over TCP/IP and native SMB on linux -->
      <tcpipSMB platforms="linux"/>
      <netBIOSSMB platforms="linux"/>
      <hostAnnounce interval="5"/>

			<!-- Use Win32 NetBIOS interface on Windows -->
      <Win32NetBIOS/>
      <Win32Announce interval="5"/>

<!--
      <WINS>
         <primary>1.2.3.4</primary>
         <secondary>5.6.7.8</secondary>
      </WINS>
-->
      <sessionDebug flags="Negotiate,Socket"/>
   </config>

   <config evaluator="string-compare" condition="Filesystems">
      <filesystem name="Alfresco">
         <store>workspace://SpacesStore</store>
         <rootPath>/alf:Company_Home</rootPath>

         <accessControl default="Write">
            <user name="derekh" access="Write"/>
   			<user name="gkspencer" access="Write"/>
            <address subnet="90.1.0.0" mask="255.255.0.0" access="Write"/>
         </accessControl>
      </filesystem>
   </config>

   <config evaluator="string-compare" condition="Filesystem Security">
			<JCEProvider>cryptix.jce.provider.CryptixCrypto</JCEProvider>

      <authenticator type="local">
         <NOallowGuest/>
      </authenticator>

<!--
      <authenticator type="passthru">
         <allowGuest/>
      	 <Server>90.1.0.2</Server>
         <Domain>STARLASOFT</Domain>
      </authenticator>
-->
      <globalAccessControl default="None">
         <user name="gkspencer" access="Write"/>
         <user name="GK Spencer" access="Write"/>
         <address ip="90.1.0.90" access="Write"/>
      </globalAccessControl>

			<users>
				<localuser name="user">
					<password>user</password>
					<comment>Normal user account</comment>
				</localuser>
	
				<localuser name="administrator">
					<password>admin</password>
					<administrator/>
					<comment>Administrator account</comment>
				</localuser>
			</users>

   </config>

</alfresco-config>
