<model name="alf:contentmodel" xmlns="http://www.alfresco.org/dictionary/0.1">

   <description>Alfresco Content Model</description>
   <author>Alfresco</author>
   <published>2005-05-30</published>
   <version>1.0</version>
   
   <imports>
      <import uri="http://www.alfresco.org/dictionary/0.1" prefix="d"/>
   </imports>
   
   <namespaces>
      <namespace uri="http://www.alfresco.org/test/contentmodel/1.0" prefix="alf"/>
   </namespaces>

   <types>
      
      <type name="alf:base">
         <title>Base</title>
         <description>The Base Type</description>
         <parent></parent>
         
         <properties>
            <property name="alf:type">
               <type>d:text</type>
               <protected>true</protected>
               <default></default>
            </property>
         </properties>
         
         <associations>
            <association name="alf:assoc1">
               <source>
                  <mandatory>true</mandatory>
                  <many>false</many>
               </source>
               <target>
                  <class>alf:base</class>
                  <mandatory>false</mandatory>
                  <many>true</many>
               </target>
            </association>
            <association name="alf:assoc2">
               <source>
                  <mandatory>true</mandatory>
                  <many>true</many>
               </source>
               <target>
                  <class>alf:referencable</class>
                  <mandatory>false</mandatory>
                  <many>false</many>
               </target>
            </association>
            <child-association name="alf:childassoc1">
               <source>
                  <mandatory>true</mandatory>
                  <many>true</many>
               </source>
               <target>
                  <class>alf:referencable</class>
                  <mandatory>false</mandatory>
                  <many>false</many>
               </target>
               <child-name>fred</child-name>
               <duplicate>true</duplicate>
            </child-association>
         </associations>
         
         <mandatory-aspects>
            <aspect>alf:referencable</aspect>
         </mandatory-aspects>
      </type>
   
      <type name="alf:file">
         <parent>alf:base</parent>
         
         <properties>
            <property name="alf:fileprop">
               <type>d:text</type>
               <protected>true</protected>
               <default></default>
            </property>

         </properties>

         <associations>
            <child-association name="alf:childassoc2">
               <target>
                  <class>alf:referencable</class>
               </target>
               <child-name>fred</child-name>
               <duplicate>true</duplicate>
            </child-association>
         </associations>

         <overrides>
            <property name="alf:type">
               <default>an overriden default value</default>
            </property>
         </overrides>
      </type>
      
   </types>
   
   <aspects>
      <aspect name="alf:referencable">
         <title>Referencable</title>
         <description>The referencable aspect</description>
         <parent></parent>
         
         <properties>
            <property name="alf:id">
               <type>d:int</type>
               <protected>true</protected>
               <mandatory>true</mandatory>
               <index enabled="true">
                  <atomic>true</atomic>
                  <stored>false</stored>
               </index>
            </property>
         </properties>
      </aspect>
   </aspects>
   
</model>
