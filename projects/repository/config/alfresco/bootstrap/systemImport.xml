<view:view xmlns:view="http://www.alfresco.org/view/repository/1.0"
           xmlns:cm="http://www.alfresco.org/model/content/1.0"
           xmlns:app="http://www.alfresco.org/model/application/1.0">

	<cm:folder view:childName="app:${companySpaceName}">
		<app:uifacets />
		<cm:name>${companySpaceName}</cm:name>
		<app:icon>space-icon-default</app:icon>
		<cm:title>${companySpaceName}</cm:title>
		<cm:description>${companySpaceDescription}</cm:description>
		<cm:contains>
			<cm:folder view:childName="app:${glossaryName}">
				<app:uifacets />
				<cm:name>${glossaryName}</cm:name>
				<app:icon>space-icon-default</app:icon>
				<cm:title>${glossaryName}</cm:title>
				<cm:contains>
					<cm:folder view:childName="app:${spaceTemplatesName}">
						<app:uifacets />
						<cm:name>${spaceTemplatesName}</cm:name>
						<app:icon>space-icon-default</app:icon>
						<cm:title>${spaceTemplatesName}</cm:title>
					</cm:folder>
					<cm:folder view:childName="app:${contentTemplatesName}">
						<app:uifacets />
						<cm:name>${contentTemplatesName}</cm:name>
						<app:icon>space-icon-default</app:icon>
						<cm:title>${contentTemplatesName}</cm:title>
					</cm:folder>
				</cm:contains>
			</cm:folder>
		</cm:contains>
	</cm:folder>

</view:view>
